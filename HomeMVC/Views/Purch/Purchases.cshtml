@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Список покупок</h3>
        <table>
            <tr>
                <td><p>Номер</p></td>
                <td></td>
                <td><p>Покупатель</p></td>
                <td></td>
                <td><p>Адрес</p></td>
                <td></td>
                <td><p>ID книги</p></td>
                <td></td>
                <td><p>Время</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Purchases)
            {
                <tr>
                    <td><p>@b.PurchaseId</p></td>
                    <td></td>
                    <td><p>@b.Person</p></td>
                    <td></td>
                    <td><p>@b.Address</p></td>
                    <td></td>
                    <td><p>@b.BookId</p></td>
                    <td></td>
                    <td><p>@b.Date</p></td>
                </tr>
            }
        </table>
    </div>
</html>